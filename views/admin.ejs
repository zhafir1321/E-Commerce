<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style="background-color: rgb(95, 93, 213)">
     <!-- navbar -->
     <nav class="navbar navbar-expand-lg bg-warning">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">SecondChanceID</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="#" style="margin-right: 20px;">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- navbar -->
       
      <!-- Container Table -->
      <div class="container">
        <h2 class="text-center mb-4">Users</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>No</th>
              <th>User Name</th>
              <th>Role</th>
              <th>Phone Number</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((el, index) => { %>
            <tr>
              <td><%= index += 1 %></td>
              <td><%= el.name %></td>
              <td><%= el.User.role %></td>
              <td><%= el.phoneNumber %></td>
              <td><%= el.email %></td>
              <td><a href="/admin/<%= el.User.id %>/delete"><button class="btn btn-danger">Delete</button></td></a>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Container Table -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>