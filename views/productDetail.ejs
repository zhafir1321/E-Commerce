<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style="background-color: rgb(95, 93, 213);">
 
     <!-- navbar -->
     <nav class="navbar navbar-expand-lg bg-warning">
        <div class="container-fluid">
          <a class="navbar-brand" href="<%= role === 'Seller' ? '/home-seller' : 'home-buyer' %>">SecondChanceID</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="<%= role === 'Seller' ? '/home-seller' : 'home-buyer' %>">Home</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- navbar -->


      <!-- container -->

      <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="row">
              <div class="col-md-6" style="text-align: left;">
                <img src="<%= data.image %>" class="img-fluid" alt="<%= data.name %>" style="float: left;">
              </div>
              <div class="col-md-6" style="background-color: white;">
                <h5 class="card-title"><%= data.name %></h5>
                <p class="card-text"><%= data.convert %></p>
                <p class="card-text"><%= data.description %></p>
                <p style="text-align: right;">Category: <%= data.Category.name %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center mt-5">
        <div class="col-md-8 text-center">
          <% if (data.BuyerId) { %>
          <button type="button" class="btn btn-primary btn-lg" disabled>Sold Out!</button>
          <% } else { %>
          <a href="/seller/<%= data.id %>/buy"><button type="button" class="btn btn-primary btn-lg">Buy Now</button></a>
          <%} %>
        </div>
      </div>

      <!-- container -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>